<div class="container">
  <h3>Restaurants</h3>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@restaurant) do |f| %>
      	<%= f.label :name %>
      	<br></br>
        <%= f.text_field :name %>
        <br></br>
        <%= f.label :avatar, 'Image' %>
      	<br></br>
        <%= f.file_field :avatar %>
        <br></br>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
    </div>
        <br></br>
        
  </div>
</div>
